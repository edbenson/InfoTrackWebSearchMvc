@model InfoTrackWebSearch.Models.WebSearch

@{
    ViewData["Title"] = "Search";
}

<h1>Web Search</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SearchQuery" class="control-label">Search for</label>
                <input asp-for="SearchQuery" class="form-control" />
                <span asp-validation-for="SearchQuery" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchCount" class="control-label">Search result limit</label>
                <input asp-for="SearchCount" class="form-control" min="0" style="width:100px;" />
                <span asp-validation-for="SearchCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScanForUrl" class="control-label">URL to find in result</label>
                <input asp-for="ScanForUrl" class="form-control" />
                <span asp-validation-for="ScanForUrl" class="text-danger"></span>
            </div>
            @if ((bool)(ViewData["IsFirstTime"]))
            {
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            }
            else
            {
                <div class="form-group" style="font-weight:bold;">
                    <label class="control-label">URL found at result positions: </label>
                    @Html.DisplayFor(model => model.Positions)
                </div>
                <div class="form-group">
                    <input type="submit" value="Search again" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
